{
    "certificate": {
        "dynamic_templates" : [
            {
                "string_fields" : {
                    "mapping" : {
                        "index" : "not_analyzed",
                        "type" : "string",
                        "doc_values": true
                    },
                    "match_mapping_type" : "string",
                    "match" : "*"
                }
            }
        ],
        "_timestamp": {
            "enabled": true,
            "path": "lastSeenTimestamp",
            "store": true
        },
        "properties": {
            "ca": {
                "type": "boolean"
            },
            "firstSeenTimestamp": {
                "format": "date_hour_minute_second",
                "type": "date"
            },
            "isChainValid": {
                "type": "boolean"
            },
            "lastSeenTimestamp": {
                "format": "date_hour_minute_second",
                "type": "date"
            },
            "validity": {
                "properties": {
                    "notAfter": {
                        "format": "date_hour_minute_second",
                        "type": "date"
                    },
                    "notBefore": {
                        "format": "date_hour_minute_second",
                        "type": "date"
                    }
                }
            }
        }
    }
}
